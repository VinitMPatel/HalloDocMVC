@model Services.ViewModels.AdminDashboard;
@{
    Layout = "";
}
<div class="table-responsive border-top">
    <table class="table d-md-table d-none table-secondary">
        <thead class="bg-body-secondary">
            <tr>
                <th>Name</th>
                <th> </th>
                <th>Date of birth</th>
                <th>Region</th>
                <th>Physician</th>
                <th>Date of Service</th>
                <th>Address</th>
                <th>Notes</th>
                <th>Chat With</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.requestclients)
            {
                var color = "mediumpurple";
                var type = "";
                @if (obj.Request.Requesttypeid == 1)
                {
                    color = "rgb(117,201,115)";
                    type = "Patient";
                }
                else if (obj.Request.Requesttypeid == 2)
                {
                    color = "rgb(219,161,36)";
                    type = "Family";
                }
                else if (obj.Request.Requesttypeid == 4)
                {
                    color = "rgb(230, 0 , 115)";
                    type = "Business";
                }
                else if (obj.Request.Requesttypeid == 3)
                {
                    color = "#e36478;";
                    type = "Concierge";
                }

                <tr style="--bs-table-bg : @color">
                    <td class="text-white">@obj.Firstname</td>
                    <td class="text-white"><i class="bi bi-envelope"></i></td>
                    <td class="text-white">@obj.Strmonth @obj.Intdate, @obj.Intyear</td>
                    <td class="text-white">@obj.Request.User.Region.Name</td>
                    @if (obj.Request.Physician != null)
                    {
                        <td class="text-white">@obj.Request.Physician.Firstname</td>
                    }
                    else
                    {
                        <td class="text-white"> - </td>
                    }
                    <td class="text-white">@obj.Request.Createddate</td>
                    <td class="text-white">@obj.Address</td>
                    <td class="text-white">@obj.Notes</td>
                    <td class="text-white">
                        <div class="border border-light rounded-2 p-1 text-center"><i class="bi bi-person-fill me-2"></i>Provider</div>
                    </td>
                    <td>
                        <div class="border border-light rounded-2 text-center">
                            <div class="btn-group">
                                <button type="button" class="bg-transparent border border-0 text-white p-1 w-100" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                                    Action
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li onclick="ViewCase(@obj.Request.Requestid)" style="cursor : pointer"><a class="dropdown-item"><i class="bi bi-card-checklist me-2"></i>View Case</a></li>
                                    <li onclick="ViewUploads(@obj.Request.Requestid)" style="cursor : pointer"><a class="dropdown-item"><i class="bi bi-journal-bookmark-fill me-2"></i>View Uploads</a></li>
                                    <li onclick="ViewNotes(@obj.Request.Requestid)" style="cursor : pointer"><a class="dropdown-item"><i class="bi bi-file-medical me-2"></i>View Notes</a></li>
                                    <li onclick="Orders(@obj.Request.Requestid)" style="cursor : pointer"><a class="dropdown-item"><i class="bi bi-card-checklist me-2"></i>Orders</a></li>
                                    <li onclick="CloseCase(@obj.Request.Requestid)" style="cursor : pointer"><a class="dropdown-item"><i class="bi bi-ban me-2"></i>Close Case</a></li>
                                    <li onclick="BlockCase(@obj.Request.Requestid)" style="cursor : pointer"><a class="dropdown-item"><i class="bi bi-ban me-2"></i>Doctors Note</a></li>
                                    <li onclick="BlockCase(@obj.Request.Requestid)" style="cursor : pointer"><a class="dropdown-item"><i class="bi bi-ban me-2"></i>Clear Case</a></li>
                                    <li onclick="BlockCase(@obj.Request.Requestid)" style="cursor : pointer"><a class="dropdown-item"><i class="bi bi-ban me-2"></i>Encounter</a></li>
                                </ul>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="accordion accordion-flush d-md-none d-block" id="accordionFlushExample">

        <div class="accordion-item">
            @foreach (var item in Model.requestclients)
            {
                var color = "mediumpurple";
                var type = "";
                @if (item.Request.Requesttypeid == 1)
                {
                    color = "rgb(117,201,115)";
                    type = "Patient";
                }
                else if (item.Request.Requesttypeid == 2)
                {
                    color = "rgb(219,161,36)";
                    type = "Family";
                }
                else if (item.Request.Requesttypeid == 4)
                {
                    color = "rgb(230, 0 , 115)";
                    type = "Business";
                }
                else if (item.Request.Requesttypeid == 3)
                {
                    color = "rgb(0,172,230)";
                    type = "Concierge";
                }
                <h2 class="accordion-header" id="flush-headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseone-@item.Requestid" aria-expanded="false" aria-controls="flush-collapseOne" style="background-color:#e7f1ff; color:black">

                        <div class="col d-flex flex-column">
                            <span class="">@item.Firstname, @item.Lastname</span>
                            <span class=" mt-4">@item.Street @item.City @item.State</span>
                            <span class="mt-3"><i class="bi bi-clock text-info h6 me-2 icns"></i>Wait Time: DEC5, 2023</span>
                        </div>
                        <div class="col d-flex flex-column text-end mt-2 p-0">
                            <div>
                                <div>
                                    <span>@type</span>
                                    <i class="bi bi-circle-fill" style="color :@color"></i>
                                </div>
                                <div class=" btn rounded-pill text-info border-info float-end p-1 mt-3" style="width:150px">
                                    Map Location
                                </div>

                            </div>

                        </div>
                    </button>
                    <hr class="m-0">
                </h2>

                <div id="flush-collapseone-@item.Requestid" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample" style="background-color:#e7f1ff; color:black">
                    <div class="d-flex justify-content-end">
                        <div class="rounded-pill me-3 viewCaseBtn p-1 viewCase" id="@item.Requestid" style="cursor : pointer">
                            View Case
                        </div>
                    </div>

                    <div class="accordion-body d-flex flex-column gap-1">
                        <div><i class="bi bi-calendar2-minus me-2 icn"></i><span class="text-secondary">Date Of Birth : </span> @item.Strmonth @item.Intdate, @item.Intyear</div>
                        <div><i class="bi bi-envelope me-2 icn"></i><span class="text-secondary">Email : </span> @item.Request.Email</div>
                        <div><i class="bi bi-telephone me-2 icn"></i><span class="text-secondary">Patient : </span> @item.Request.Phonenumber</div>
                        <div>
                            <i class="bi bi-person me-2 icn"></i><span class="text-secondary">Transfer Note : </span>
                            @if (item.Request.Physician != null)
                            {
                                <span> Admin transfered to Dr. @item.Request.Physician.Firstname on @item.Request.Modifieddate </span>
                            }
                            else
                            {
                                <span> - </span>
                            }
                        </div>
                        <div><i class="bi bi-calendar2-minus me-2 icn"></i><span class="text-secondary">Date Of Service : </span> @item.Strmonth @item.Intdate, @item.Intyear</div>
                        <div>
                            <i class="bi bi-person me-2 icn"></i><span class="text-secondary">Physician : </span>
                            @if (item.Request.Physician != null)
                            {
                                <span> Dr. @item.Request.Physician.Firstname </span>
                            }
                            else
                            {
                                <span> - </span>
                            }
                        </div>
                        <div><i class="bi bi-globe-central-south-asia icn me-2"></i><span class="text-secondary">Region : </span> @item.Request.User.Region.Name</div>
                    </div>

                    <div class="row mx-3">
                        <div class="col-6" onclick="CloseCase(@item.Request.Requestid)">
                            <a class="btn w-100  text-white rounded-pill p-1 btn-sm bg-danger">Close Case</a>
                        </div>
                        <div class="col-6" onclick="ViewNotes(@item.Request.Requestid)">
                            <a class="btn w-100 bg-success text-white rounded-pill p-1 btn-sm">View Notes</a>
                        </div>
                        <div class="col-6 mt-2">
                            <a class="btn w-100 text-white rounded-pill p-1 btn-sm" style="background-color : #025c21">Doctors Notes</a>
                        </div>
                        <div class="col-6 mt-2 viewUpload" onclick="ViewUploads(@item.Request.Requestid)">
                            <a class="btn w-100 bg-success text-white rounded-pill p-1 btn-sm">View Uploads</a>
                        </div>
                        <div class="col-6 mt-2">
                            <a class="btn w-100 bg-success text-white rounded-pill p-1 btn-sm">Encounter</a>
                        </div>
                        <div class="col-6 mt-2">
                            <a class="btn w-100 bg-warning text-white rounded-pill p-1 btn-sm">Clear Case</a>
                        </div>
                        <div class="col-6 mt-2">
                            <a class="btn w-100 bg-success text-white rounded-pill p-1 btn-sm">Email</a>
                        </div>
                    </div>
                </div>
                <hr class="my-1" />
            }
        </div>
    </div>
</div>
<div class="d-flex justify-content-center gap-2">
    @if (Model.totalPages > 0)
    {
        var previous = Model.currentpage - 1;
        var next = Model.currentpage + 1;
        if (previous <= 0)
        {
            previous = 1;
        }
        if (next > Model.totalPages)
        {
            next = Model.totalPages;
        }
        <button class="@previous btn btn-outline-info" id="page-0" onclick="ChangePage(@previous)">
            Previous
        </button>
        @if (Model.totalPages > 5)
        {
            @if (Model.currentpage > Model.totalPages - 3)
            {
                <button class="1 btn btn-outline-info" id="page-1" onclick="ChangePage(1)">
                    1
                </button>
                <button class="0 btn btn-outline-info" id="page-0" style="width:25px">
                    ...
                </button>
                @for (var i = Model.totalPages - 3; i <= Model.totalPages; i++)
                {
                    <button class="@i btn btn-outline-info" id="page-@i" onclick="ChangePage(@i)">
                        @i
                    </button>
                }
            }
            else if (Model.currentpage < Model.totalPages - 2 && Model.currentpage > 3)
            {
                <button class="1 btn btn-outline-info" id="page-1" onclick="ChangePage(1)">
                    1
                </button>
                <button class="0 btn btn-outline-info" id="page-0" style="width:25px">
                    ...
                </button>
                @for (var i = Model.currentpage - 1; i <= Model.currentpage + 1; i++)
                {
                    <button class="@i btn btn-outline-info" id="page-@i" onclick="ChangePage(@i)">
                        @i
                    </button>
                }
                <button class="0 btn btn-outline-info" id="page-0" style="width:25px">
                    ...
                </button>
                <button class="@Model.totalPages btn btn-outline-info" id="page-@Model.totalPages" onclick="ChangePage(@Model.totalPages)">
                    @Model.totalPages
                </button>
            }
            else
            {
                @for (var i = 1; i <= 4; i++)
                {
                    <button class="@i btn btn-outline-info" id="page-@i" onclick="ChangePage(@i)">
                        @i
                    </button>
                }
                <button class="0 btn btn-outline-info" id="page-0" style="width:25px">
                    ...
                </button>
                <button class="@Model.totalPages btn btn-outline-info" id="page-@Model.totalPages" onclick="ChangePage(@Model.totalPages)">
                    @Model.totalPages
                </button>
            }
        }
        else
        {
            @for (int page = 0; page < Model.totalPages; page++)
            {
                var temp = page + 1;

                <button class="@temp btn btn-outline-info" id="page-@temp" onclick="ChangePage(@temp)">
                    @temp
                </button>
            }
        }
        <button class="@next btn btn-outline-info" id="page-@next" onclick="ChangePage(@next)">
            Next
        </button>
    }
    else
    {
        <div class="h3 text-danger">No Record found</div>
    }
</div>
<script>
    function ChangePage(Page) {
        param.requestedPage = Page;
        CommonAjax();
    }

    function CommonAjax() {
        console.log("status is : " + param.requestStatus);
        console.log("requesttype is : " + param.requestType);
        console.log("page is : " + param.requestedPage);
        console.log("Search is : " + param.searchKey);
        $.ajax({
            url: '/Admin/AllState',
            data: param,
            success: function (response) {

                $('#status-tabContent').html(response);
            },
            error: function (xhr, status, error) {
                console.error(error);
            }
        });
    }
    function ViewCase(requestId) {
        $.ajax({
            url: '/Admin/ViewCase',
            data: { "requestId": requestId },
            success: function (response) {
                $('#viewCaseContent').html(response);
            },
            error: function (xhr, status, error) {
                console.error(error);
            }
        });
    }

    function ViewUploads(requestId) {
        $.ajax({
            url: '/Admin/ViewUploads',
            data: { "requestId": requestId },
            success: function (response) {
                $('#viewCaseContent').html(response);
            },
            error: function (xhr, status, error) {
                console.error(error);
            }
        });
    }

    function ViewNotes(requestId) {
        $.ajax({
            url: '/Admin/ViewNotes',
            data: { "requestId": requestId },
            success: function (response) {
                $('#viewCaseContent').html(response);
            },
            error: function (xhr, status, error) {
                console.error(error);
            }
        });
    }

    function Orders(requestId) {
        console.log("Working");
        $.ajax({
            url: '/Admin/Orders/',
            data: { "requestId": requestId },
            success: function (response) {
                $('#viewCaseContent').html(response);
            },
            error: function (xhr, status, error) {
                console.error(error);
            }
        });
    }

    function CloseCase(requestId) {
        console.log("Working");
        $.ajax({
            url: '/Admin/CloseCase/',
            data: { "requestId": requestId },
            success: function (response) {
                $('#viewCaseContent').html(response);
            },
            error: function (xhr, status, error) {
                console.error(error);
            }
        });
    }

    $(document).ready(function () {
        var temp = document.getElementById('page-' + @Model.currentpage);
        if (temp != null) {
            temp.style.backgroundColor = "lightblue";
        }
    });
</script>