@model Services.ViewModels.LoginPerson
<Partial name="_Notification" />

<div class="bg-image">
    <img src="~/images/11116016_415.jpg" class="bg" width="50%">
</div>


<div class="mode">
    <button id="darkbtn" class="border border-0 rounded-2 p-1">
        <img src="~/images/moon_light.png" alt="picture" id="darkimg" height="30px" width="30px">
    </button>
</div>

<div class="maindiv container-fluid d-flex align-items-center">

    <div class="subdiv d-flex flex-column">
        <div class="d-flex justify-content-center">
            <img src="~/images/1hallodoc.png" alt="picture" class="mt-3 mainpic">
        </div>


        <div class="h3 mt-3 d-flex justify-content-center">Reset Your Password</div>
        <form asp-action="UpdatePassword" asp-controller="Admin">

            <input type="text" asp-for="aspNetUserId" hidden/>

            <div class="inputs">
                <div class="form-floating mb-3 fields mt-5">
                    <input type="password" class="form-control" id="password" placeholder="name@example.com" asp-for="password">
                    <label for="floatinginput">Password</label>
                    <div class="login-icon" onclick="fun()">
                        <i class="bi bi-eye-slash-fill" id="eye"></i>
                    </div>
                    <span asp-validation-for="password" class="text-danger"></span>
                    <span id="passwordWarning" class="text-danger"></span>
                </div>

                <div class="form-floating fields">
                    <input type="password" class="form-control" id="confirmpassword" placeholder="password">
                    <label for="floatingpassword">Confirm Password</label>
                    <div class="login-icon" onclick="fun2()">
                        <i class="bi bi-eye-slash-fill" id="eye2"></i>
                    </div>
                    <span id="warning" class="text-danger"></span>

                </div>
            </div>

            @* <button type="button" id="submitBtn" class="d-flex justify-content-center bg-info fields mt-3 text-white rounded-2 border">Reset Password</button><br> *@
            <button type="button" class="btn btn-info text-white fields d-flex justify-content-center mt-3 shadow-none" id="submitBtn">Reset Password</button>
        </form>

    </div>
</div>

<div class="d-flex justify-content-center">
    <div class="terms bg-body-tertiary p-1 border rounded-2 d-flex justify-content-between position-fixed bottom-0 mb-3">
        <a href="#" class="text-decoration-none text-secondary">terms of conditions</a>
        <span class="mx-1">|</span>
        <a href="#" class="text-decoration-none text-secondary">privacy policy</a>
    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script>
    const path = document.getElementById("eye");
    const password = document.getElementById('password')
    const cpassword = document.getElementById('confirmpassword')
    const eye2 = document.getElementById("eye2");
    function fun() {
        if (password.type === "password") {
            path.classList.remove("bi-eye-slash-fill");
            path.classList.add("bi-eye-fill");
            password.type = "text";
        }
        else {
            path.classList.remove("bi-eye-fill");
            path.classList.add("bi-eye-slash-fill");
            password.type = "password";
        }
    }
    function fun2() {
        if (cpassword.type === "password") {
            eye2.classList.remove("bi-eye-slash-fill");
            eye2.classList.add("bi-eye-fill");
            cpassword.type = "text";
        }
        else {
            eye2.classList.remove("bi-eye-fill");
            eye2.classList.add("bi-eye-slash-fill");
            cpassword.type = "password";
        }
    }

    $('#submitBtn').on('click', function () {

        if ($('#confirmpassword').val() == $('#password').val() && $('#passwordWarning').text() == "" && $('#confirmpassword').val() != "" && $('#password').val() != "") {
            $('#submitBtn').prop('type', 'submit');
            $('#submitBtn').click();
        }
        else if ($('#confirmpassword').val() != $('#password').val()) {
            $('#warning').html("*Both Password must be same");
        }
        else if ($('#password').val() == "") {
            $('#passwordWarning').html("*Please enter password")
        }
        else {
            $('#passwordWarning').html("*Password should contain atleast one number , one alphabet , one special character and having length minimum 8.");
        }
    })

    $('#password').on('focus', function () {
        $('#warning').html("");
    })

    $('#password').on('focus', function () {
        $('#warning').html("");
    })


    $('#password').on('input', function () {
        if ($('#password').val() == "") {
            $('#passwordWarning').html("*Please enter password")
        }
        else {
            // var regex = /(?=.*\d.*)(?=.*[a-zA-Z].*)(?=.*[!#\$%&\?].*).{8,20}/
            var regex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[$!%#*?&])[A-Za-z\d$!#%*?&]{8,}$/
            if (!regex.test($('#password').val())) {
                $('#passwordWarning').html("*Password should contain atleast one number , one alphabet , one special character and having length minimum 8.");

            } else {
                $('#passwordWarning').html("");
            }
        }
    })
</script>