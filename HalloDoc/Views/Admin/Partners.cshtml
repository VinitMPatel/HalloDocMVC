@{
    Layout = "_Admin";
}
@model Services.ViewModels.PartnerViewModel
<div class="container-fluid">
    <div class="h4 mt-5">
        Vendor(s)
    </div>
    <div class="shadow">

        <div class="d-flex justify-content-between flex-column flex-sm-row mx-3 p-2" >

            <div class="row d-flex flex-row">
                <div class="col-12 col-sm-6">
                    <div class="d-flex rounded-2 border border-dark h-100">
                        <span class="search-icon"></span>
                        <input id="search" onkeyup="Search()" class="form-control form-control-sm border-0 shadow-none p-0" type="search" placeholder="Search Patients" aria-label="Search">
                    </div>
                </div>

                <div class="col-12 col-sm-6 mt-3 mt-sm-0">
                    <select class="form-select border border-dark h-100" id="selectProfession" aria-label="Floating label select example">
                        <option value="0" selected>All Professions</option>
                        @foreach(var item in Model.professionTypeList)
                        {
                            <option value=@item.Healthprofessionalid >@item.Professionname</option>
                        }
                    </select>
                </div>
            </div>

            <div class="mt-2 mt-sm-0">
                <button class="btn btn-outline-info shadow-none w-100">
                    + Add Business
                </button>
            </div>

        </div>

        <div id="dataTable" class="mt-3">

        </div>
    </div>
</div>
<script src="~/js/Partners.js"></script>
<script>
    $(document).ready(function () {
        var professionType = 0;
        $.ajax({
            url: '/Admin/GetPartnerData',
            data: { "professionType": professionType },
            success: function (response) {
                $('#dataTable').html(response);
            },
            error: function (xhr, status, error) {
                alert("Something went wrong");
            }
        })
    });
</script>