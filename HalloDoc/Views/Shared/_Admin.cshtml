@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HalloDoc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.0/sweetalert.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/AdminDashboard.css" asp-append-version="true" />
</head>
<body >
    <header>
        <nav class="navbar navbar-light border-bottom px-4">
            <p>
                <button class="btn d-sm-none border border-dark" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
                    <i class="bi bi-list"></i>
                </button>
                <img src="~/images/1HalloDoc.png" height="70px" width="140px"/>
                <div class="offcanvas offcanvas-start d-sm-none" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasExampleLabel">Offcanvas</h5>
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <div class="nav nav-tabs d-block" id="nav-tab" role="tablist">
                            <button class="nav-link active k fw-bold me-2" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Dashboard</button>
                            <button class="nav-link k text-secondary fw-bold me-1" id="nav-provider-location-tab" data-bs-toggle="tab" data-bs-target="#nav-provider-location" type="button" role="tab" aria-controls="nav-provider-location" aria-selected="false">Provider Location</button>
                            <button class="nav-link k text-secondary fw-bold" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">My Profile</button>
                            <button class="nav-link k text-secondary fw-bold" id="nav-provider-tab" data-bs-toggle="tab" data-bs-target="#nav-provider" type="button" role="tab" aria-controls="nav-provider" aria-selected="false">Providers</button>
                            <button class="nav-link k text-secondary fw-bold" id="nav-partner-tab" data-bs-toggle="tab" data-bs-target="#nav-partner" type="button" role="tab" aria-controls="nav-partner" aria-selected="false">Partners</button>
                            <button class="nav-link k text-secondary fw-bold" id="nav-access-tab" data-bs-toggle="tab" data-bs-target="#nav-access" type="button" role="tab" aria-controls="nav-access" aria-selected="false">Access</button>
                            <button class="nav-link k text-secondary fw-bold" id="nav-record-tab" data-bs-toggle="tab" data-bs-target="#nav-record" type="button" role="tab" aria-controls="nav-record" aria-selected="false">Records</button>
                        </div>
                    </div>
                </div>
                
            </p>

            <div class="navdiv d-flex flex-row gap-2">
                <span class="mt-2 welcome d-none d-sm-block">welcome , @HttpContextAccessor.HttpContext.Session.GetString("AdminName") </span>

                <a asp-action="Logout" asp-controller="Admin">
                    <button style="background-color: transparent;" class="border-1 rounded text-info border-info p-2">
                        <div><i class="bi bi-box-arrow-right d-sm-none"></i></div>
                        <div class="logouttext"><span class="d-none d-sm-block">log out</span></div>
                    </button>
                </a>

                <div >
                    <button id="darkbtn" class="border border-0 rounded-2 p-1">
                        <img src="~/images/moon_light.png" alt="picture" id="darkimg" height="35px" width="30px">
                    </button>
                </div>
            </div>
        </nav>

        <div class="shadow px-4 my-2">
            <div class=" h6 d-none d-sm-flex gap-4" style="width:93%">
                @if (Context.Request.Path.Equals("/Admin/AdminDashboard"))
                {
                    <a asp-action="AdminDashboard" class="text-decoration-none text-info px-2" style="border-bottom: 4px solid #17a2b8!important; height : 40px">Dashboard</a>
                }
                else
                {
                    <a asp-action="AdminDashboard" class="text-decoration-none pe-2" style="color:black;">Dashboard</a>
                }
                <a class="text-decoration-none pr-4" style="color:black;">Providers Location</a>
                @if (Context.Request.Path.Equals("/Admin/AdminProfile"))
                {
                    <a asp-action="AdminProfile" class="text-decoration-none text-info px-2" style="border-bottom: 4px solid #17a2b8!important; height : 40px">My Profile</a>
                }
                else
                {
                    <a asp-action="AdminProfile" class="text-decoration-none pe-2" style="color:black;">My Profile</a>

                }
                @if (Context.Request.Path.Equals("/Admin/Provider"))
                {
                    <a asp-action="Provider" class="text-decoration-none text-info px-2" style="border-bottom: 4px solid #17a2b8!important; height : 40px">Provider</a>
                }
                else
                {
                    <a asp-action="Provider" class="text-decoration-none pe-2" style="color:black;">Provider</a>
                }
                <a class="text-decoration-none pe-2" style="color:black;">Partners</a>
                <a class="text-decoration-none pe-2" style="color:black;">Access</a>
                <a class="text-decoration-none pe-2" style="color:black;">Records</a>
            </div>
        </div>

        <div class="tab-content" id="nav-tabContent">
       
        </div>
    </header>
        @RenderBody()
