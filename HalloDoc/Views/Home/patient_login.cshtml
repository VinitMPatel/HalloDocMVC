@model Services.ViewModels.LoginPerson

@*  @{
    viewdata["title"] = "home page";
}
 *@
<Partial name="_Notification" />

<div class="bg-image">
    <img src="~/images/11116016_415.jpg" class="bg" width="50%">
</div>


<div class="mode">
    <button id="darkbtn" class="border border-0 rounded-2 p-1">
        <img src="~/images/moon_light.png" alt="picture" id="darkimg" height="30px" width="30px">
    </button>
</div>

<div class="maindiv container-fluid d-flex align-items-center">

    <div class="subdiv d-flex flex-column">
        <div class="d-flex justify-content-center">
            <img src="~/images/1hallodoc.png" alt="picture" class="mt-3 mainpic">
        </div>

            <a asp-action="index" class="text-info text-decoration-none">
            <div class="backbtn text-info mt-5" >
                    <span>&lt;back</span>
            </div>
            </a>

            <div class="h3 mt-3 d-flex justify-content-center">login to your account</div>
            <form asp-action="patient_login" asp-controller="Patient">
                <div class="inputs">
                    <div class="form-floating mb-3 fields mt-5">
                        <input type="email" class="form-control" asp-for="email" id="floatinginput" placeholder="name@example.com">
                        <label for="floatinginput">email</label>
                        <i class="bi bi-person-circle login-icon"></i>
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>

                    <div class="form-floating fields">
                        <input type="password" class="form-control" asp-for="password" id="see" placeholder="password">
                        <label for="floatingpassword">password</label>
                        <div class="login-icon" onclick="fun()">
                            <i class="bi bi-eye-slash-fill" id="eye"></i>
                        </div>
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                </div>

                
                <button type="submit" class="d-flex justify-content-center btn btn-primary fields mt-3 bg-info rounded-2 border border-0">log in</button><br>
           
            </form>
            <div class="d-flex justify-content-center mb-5"><a asp-controller="home" asp-action="resetpwd" class="link text-info text-decoration-none">forgot password?</a></div>
        

    </div>
</div>

<div class="d-flex justify-content-center">
    <div class="terms bg-body-tertiary p-1 border rounded-2 d-flex justify-content-between position-fixed bottom-0 mb-3">
        <a href="#" class="text-decoration-none text-secondary">terms of conditions</a>
        <span class="mx-1">|</span>
        <a href="#" class="text-decoration-none text-secondary">privacy policy</a>
    </div>
</div>

<script>
    const path = document.getElementById("eye");
    const password = document.getElementById('see')
    function fun() {
        console.log(password);
        if (password.type === "password") {
            path.classList.remove("bi-eye-slash-fill");
            path.classList.add("bi-eye-fill");
            password.type = "text";

        }
        else {
            path.classList.remove("bi-eye-fill");
            path.classList.add("bi-eye-slash-fill");
            password.type = "password";

        }
    }
</script>
