<Partial name="_Notification" />

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Create New Request</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="NewRequest">
                <div class="modal-body">
                    <div class="h6">Here, I want to create new request for...</div>
                    <div class="d-flex justify-content-center mt-3">

                        <input type="radio" class="btn-check" name="flexRadioDefault" id="option1" autocomplete="off" value="Me">
                        <label class="btn btn-info me-3 text-white" for="option1">Me</label>

                        <input type="radio" class="btn-check" name="flexRadioDefault" id="option2" autocomplete="off" value="else">
                        <label class="btn text-info border-info" for="option2">Some One Else</label>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="bg-info p-2 rounded border-0 px-3 text-white">Continue</button>
                    <button type="button" class="btn ms-3 p-2 rounded border-info bg-transparent text-info px-3" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">

        <div class="container-fluid pb-5 mb-5" id="requests">
            <div class="px-4">

                <div class="d-flex align-items-center py-3">
                    <div class="h3 subinfotext fw-bold">Medical History </div>
                </div>
                <div class="bglight rounded p-3 shadow" id="content">
                    <div class="d-flex justify-content-end">
                        <button type="button" class="border border-info bg-transparent rounded-2 text-info" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                            <i class="bi bi-plus-lg"></i>
                            <span class="new_request">Create new request</span>
                        </button>
                    </div>
                    <div class="table-responsive">
                        <table class="table mt-4">
                            <thead class="thead-light">
                                <tr class="bg-secondary">
                                    <th scope="col">Created Date</th>
                                    <th scope="col">Current Status</th>
                                    <th scope="col">Document</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var m in Model.request)
                                {
                                    <tr>
                                        <td>@m.Createddate.ToString("MMM dd , yyyy")</td>

                                        @switch (m.Status)
                                        {
                                            case 1:
                                                <td>Unassigned</td>
                                                break;
                                            case 2:
                                                <td>Accepted</td>
                                                break;
                                            case 3:
                                                <td>Cancelled</td>
                                                break;
                                            case 4:
                                                <td>MDEnRoute</td>
                                                break;
                                            case 5:
                                                <td>MDONSite</td>
                                                break;
                                            case 6:
                                                <td>Conclude</td>
                                                break;
                                            case 7:
                                                <td>Cancelled By Patient</td>
                                                break;
                                            case 8:
                                                <td>Closed</td>
                                                break;
                                            case 9:
                                                <td>Unpaid</td>
                                                break;
                                            case 10:
                                                <td>Clear</td>
                                                break;
                                        }
                                        <td onclick="temp()">

                                            <a asp-action="ViewDocument" asp-route-id=@m.Requestid>
                                                <button class=" border border-info rounded-2 bg-transparent text-info">
                                                    <span>@m.Requestwisefiles.Count()</span>
                                                    Document
                                                </button>
                                            </a>


                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">

        <div class="container mt-3">

            <div class="d-flex justify-content-end">
                <div>
                    <button class=" border border-info rounded-2 p-2 bg-transparent">
                        <a class="text-decoration-none text-info" asp-action="PatientDashboard">&lt; Back</a>
                    </button>
                </div>
            </div>

            <div class="border rounded-3 p-3 mt-4 pr_main bg-white" id="main-content">
                <form asp-controller="patient" asp-action="Editing">
                    <div class="patient-info row">
                        <div class="h4">General information</div>

                        <div class="p-2 col-xl-6 col-lg-6 col-md-6 col-sm-6">
                            <div class="form-floating ">
                                <input type="text" asp-for="user.Firstname" class="form-control data" placeholder="First Name" id="firstName" disabled>
                                <label class="FloatingInput" for="Name">First Name</label>
                                <span id="firstNameWarning" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-floating mt-2 col-xl-6 col-sm-6 col-12">
                            <input type="text" asp-for="user.Lastname" class="form-control data" placeholder="Last Name" id="lastName" disabled>
                            <label style="left: 5px;">Last Name</label>
                            <span id="lastNameWarning" class="text-danger"></span>
                        </div>

                        <div class="form-floating mt-3 col-xl-6 col-sm-6 col-12">
                            <input type="date" asp-for="@Model.DOB" class="form-control data" placeholder="DOB" disabled>
                            <label style="left: 5px;">Date of Birth</label>
                        </div>
                    </div>

                    <div class="contact-info row mt-5">

                        <div class="h4">contact information</div>

                        <div class="form-floating mt-3 col-sm-6 col-12">
                            <input id="phone" class="form-control  data" type="text" asp-for="user.Mobile" disabled />
                            <span id="contactWarning" class="text-danger"></span>
                        </div>

                        <div class="form-floating mt-3 col-sm-6 col-12">
                            <input type="email" asp-for="user.Email" class="form-control data" placeholder="Email" id="email" disabled>
                            <label style="left: 5px;">Email</label>
                            <span id="emailWarning" class="text-danger"></span>
                        </div>


                    </div>

                    <div class="location-info row mt-5">

                        <div class="h4">Patient Location</div>

                        <div class="form-floating mt-3 col-xl-6 col-sm-6 col-12">
                            <input type="text" asp-for="user.Street" class="form-control data" placeholder="State" disabled>
                            <label style="left: 5px;">Street</label>
                        </div>

                        <div class="form-floating mt-3 col-xl-6 col-sm-6 col-12">
                            <input type="text" asp-for="user.City" class="form-control data" placeholder="City" disabled>
                            <label style="left: 5px;">City</label>
                        </div>

                        <div class="form-floating mt-3 col-xl-6 col-sm-6 col-12">
                            <input type="text" asp-for="user.State" class="form-control data" placeholder="State" disabled>
                            <label style="left: 5px;">State</label>
                        </div>

                        <div class="form-floating mt-3 col-sm-6 col-12">
                            <input type="text" asp-for="user.Zip" class="form-control data" placeholder="Zip" disabled>
                            <label style="left: 5px;">Zip Code</label>
                        </div>


                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <button class="bg-info p-2 rounded border-0 px-3 text-white" id="editBtn" onclick="allow()" type="button">Edit</button>
                        <button type="button" class="bg-info p-2 rounded border-0 px-3 text-white me-2" id="submitBtn">Submit</button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<script>

    const phoneInputField = document.querySelector("#phone");
    const phoneInput = window.intlTelInput(phoneInputField, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });

    var submitBtn = document.getElementById('submitBtn');
    var editBtn = document.getElementById('editBtn');
    var dataFields = document.getElementsByClassName('data');
    submitBtn.style.display = 'none';

    function allow() {
        for (let i = 0; i < dataFields.length; i++) {
            dataFields[i].removeAttribute('disabled')
            editBtn.style.display = "none";
        }
        submitBtn.style.display = 'block';
    }

    $('#submitBtn').on('click', function () {
        if ($('#firstNameWarning').text() == "" && $('#lastNameWarning').text() == "" && $('#emailWarning').text() == "" && $('#confirmEmailWarning').text() == "" && $('#contactWarning').text() == "") {
            $('#submitBtn').prop("type", "submit");
            $('#lastNameWarning').html("")
            $('#firstNameWarning').html("")
            $('#emailWarning').html("")
            $('#contactWarning').html("")
            $('#submitBtn').click();
        }
        else {
            toastr.warning("*Please fill out data correctly");
        }
    })

    $('#firstName').on('input', function () {
        if ($('#firstName').val() == "") {
            $('#firstNameWarning').html("*Please enter First name")
        }
        else {
            $('#firstNameWarning').html("")
        }
    })

    $('#lastName').on('input', function () {
        if ($('#lastName').val() == "") {
            $('#lastNameWarning').html("*Please enter Last name")
        }
        else {
            $('#lastNameWarning').html("")
        }
    })

    $('#email').on('input', function () {
        if ($('#email').val() == "") {
            $('#emailWarning').html("*Please enter email")
        }
        else {
            $('#emailWarning').html("")
        }
    })

    $('#phone').on('input', function () {
        if ($('#phone').val() == "") {
            $('#contactWarning').html("*Please enter contact detail")
        }
        else {
            var regex = /^[1-9][0-9]{9}$/

            if (!regex.test($('#phone').val())) {
                $('#contactWarning').html("*Enter valid number");

            } else {
                $('#contactWarning').html("");

            }
        }
    })

</script>

